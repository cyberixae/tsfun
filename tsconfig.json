{
  "compilerOptions": {
    "lib": ["dom", "es2016", "es2017", "es2018", "es2019"],
    "rootDir": "src",
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "outDir": "build",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}
